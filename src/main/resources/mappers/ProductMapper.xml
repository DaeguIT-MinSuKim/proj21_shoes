<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="proj21_shoes.mapper.ProductMapper">


<resultMap type="Product" id="ProductAll">
	<id column="product_code" property="productCode"/>
	<result column="productName" property="productName"/>
	<result column="gender" property="gender"/>
	<result column="material" property="material"/>
	<result column="season" property="season"/>
	<result column="madeDate" property="madeDate"/>
	<result column="costPrice" property="costPrice"/>
	<result column="sellPrice" property="sellPrice"/>
	<result column="registDate" property="registDate"/>
	<result column="cumulativeRegistCount" property="cumulativeRegistCount"/>
	<result column="cumulativeSellCount" property="cumulativeSellCount"/>
	<result column="brand" property="brand"/>
	<result column="category" property="category"/>
	<result column="employee" property="employee"/>
	<result column="productpost" property="productPost"/>
	<!-- <collection column="order_options" property="orderOptions"/> -->
</resultMap>

<select id="productByAll" resultType="Product">
	call productByAll()
</select>

</mapper>